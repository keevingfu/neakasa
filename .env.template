# Application Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite:./data/neakasa.db

# API Keys (Replace with your actual keys)
REACT_APP_YOUTUBE_API_KEY=your_youtube_api_key_here
REACT_APP_TIKTOK_API_KEY=your_tiktok_api_key_here
REACT_APP_INSTAGRAM_API_KEY=your_instagram_api_key_here

# Analytics
REACT_APP_GA_TRACKING_ID=your_google_analytics_id_here
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
REACT_APP_ENABLE_VIDEO_PREVIEW=true
REACT_APP_ENABLE_AI_ANALYSIS=false
REACT_APP_ENABLE_REAL_TIME_SYNC=false

# Performance
REACT_APP_VIDEO_LAZY_LOAD_THRESHOLD=0.1
REACT_APP_VIRTUAL_SCROLL_ITEM_SIZE=300

# Security
REACT_APP_SESSION_TIMEOUT=3600000